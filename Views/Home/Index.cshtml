@{
    ViewBag.Title = "Home Page";
}

<header class="masthead">
    <div class="container px-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6">
                <div class="mb-5 mb-lg-0 text-center text-lg-start">
                    <h1 class="display-1 lh-1 mb-3">@ViewData["HeaderTitle"]</h1>
                    <p class="lead fw-normal text-muted mb-5">@ViewData["HeaderText"]</p>
                    <div class="d-flex flex-column flex-lg-row align-items-center">
                        <a class="me-lg-3 mb-4 mb-lg-0" href="#!"><img class="app-badge" src="assets/img/google-play-badge.svg" alt="..." /></a>
                        <a href="#!"><img class="app-badge" src="assets/img/app-store-badge.svg" alt="..." /></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="assets/img/app_screen.png" alt="..." />
            </div>
        </div>
    </div>
</header>
<aside class="text-center bg-gradient-primary-to-secondary">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-xl-8">
                <div class="h2 fs-1 text-white mb-4">@ViewData["Slogan"]</div>
                <img src="~/assets/img/logo_small.png" alt="..." class="img-fluid" />
            </div>
        </div>
    </div>
</aside>
<section id="features">
    <div class="container px-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-8 order-lg-1 mb-5 mb-lg-0">
                <div class="container-fluid px-5">
                    <div class="row gx-5">
                        <div class="col-md-6 mb-5">
                            <div class="text-center">
                                <i class="bi-person-circle icon-feature text-gradient d-block mb-3"></i>
                                <h3 class="font-alt">Acesso controlado</h3>
                                <p class="text-muted mb-0">Cada usuário tem seu próprio login e senha!</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-5">
                            <div class="text-center">
                                <i class="bi bi-fingerprint icon-feature text-gradient d-block mb-3"></i>
                                <h3 class="font-alt">Permissões</h3>
                                <p class="text-muted mb-0">Cada usuário só pode instalar os certificados que tiverem permissão!</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-5 mb-md-0">
                            <div class="text-center">
                                <i class="bi bi-cpu-fill icon-feature text-gradient d-block mb-3"></i>
                                <h3 class="font-alt">Dados salvos e seguros</h3>
                                <p class="text-muted mb-0">O sistema verifica quem instalou qual certificado e quando instalou!</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="bi bi-check2-square icon-feature text-gradient d-block mb-3"></i>
                                <h3 class="font-alt">Trasnparente para o usuário</h3>
                                <p class="text-muted mb-0">Basta arrastar o arquivo do certificado e sair utilizando!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 order-lg-0">
                <img src="~/assets/img/app_login.png" alt="..." class="" />
            </div>
        </div>
    </div>
</section>
<section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <h2 class="display-4 lh-1 mb-4">@ViewData["PostHeader"]</h2>
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">
                    @ViewData["PostText"]
                </p>
            </div>
            <div class="col-sm-8 col-md-6">
                <div class="px-5 px-sm-0"><img class="img-fluid rounded-circle" src="~/assets/img/circle.jpg" alt="..." /></div>
            </div>
        </div>
    </div>
</section>
<section class="cta">
    <div class="cta-content">
        <div class="container px-5">
            <h2 class="text-white display-1 lh-1 mb-4">
                @ViewData["CTA"]
                <br />
            </h2>
            <ul>

                @foreach (var item in @ViewBag.userList)
                {
                    <li>@item</li>
                }
            </ul>
        </div>
    </div>
</section>
<section class="bg-gradient-primary-to-secondary" id="download">
    <div class="container px-5">
        <h2 class="text-center text-white font-alt mb-4">Baixe agora!</h2>
        <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center">
            <a class="me-lg-3 mb-4 mb-lg-0" href="#!"><img class="app-badge" src="assets/img/google-play-badge.svg" alt="..." /></a>
            <a href="#!"><img class="app-badge" src="assets/img/app-store-badge.svg" alt="..." /></a>
        </div>
    </div>
</section>